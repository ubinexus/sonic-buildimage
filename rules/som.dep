SPATH       := $($(SOM)_SRC_PATH)
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) rules/som.mk rules/som.dep
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)
SMDEP_FILES := $(addprefix $(SPATH)/,$(shell cd $(SPATH) && git ls-files))

$(SOM)_CACHE_MODE  := GIT_CONTENT_SHA
$(SOM)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(SOM)_DEP_FILES   := $(DEP_FILES)
$(SOM)_SMDEP_FILES := $(SMDEP_FILES)
$(SOM)_SMDEP_PATHS := $(SPATH)
